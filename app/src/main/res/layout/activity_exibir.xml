<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExibirActivity">

    <Button
        android:id="@+id/btnExcluir"
        android:layout_width="116dp"
        android:layout_height="51dp"
        android:text="Excluir"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="1046dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="83dp"
        android:layout_height="53dp"
        android:text="Salvar"
        tools:layout_editor_absoluteX="450dp"
        tools:layout_editor_absoluteY="1040dp" />

    <EditText
        android:id="@+id/edTitulo"
        android:layout_width="854dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="titulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/edtxt"
        android:layout_width="848dp"
        android:layout_height="58dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="900dp" />

</androidx.constraintlayout.widget.ConstraintLayout>